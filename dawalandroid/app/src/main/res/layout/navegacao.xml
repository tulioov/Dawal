<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerTempBB"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="120"
                    app:unit="TEMP ºC" />

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerVoltBB"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="16"
                    app:unit="Volt" />
            </TableRow>

            <TableRow>

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerPressMBB"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="5"
                    app:unit="Kg/cm³" />

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerPressCxBB"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:unit="Cx.Psi" />

            </TableRow>

            <TableRow>

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerPressD"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="100"
                    app:unit="D.Psi" />


                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerConsmBB"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="100"
                    app:unit="L/h" />



            </TableRow>

        </TableLayout>


        <TableLayout
            android:layout_width="420dp"
            android:layout_height="530dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerRPMBB"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    app:maxSpeed="35"
                    app:unit="RPM" />

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerRPMBE"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    app:maxSpeed="35"
                    app:unit="RPM" />


            </TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vento:    "
                    android:textColor="	#00008B"
                    android:textSize="50dp" />
                <TextView
                    android:id="@+id/vento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="	#00008B"
                    android:textSize="50dp" />
                <TextView
                    android:id="@+id/unitVento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="m/s"
                    android:textColor="	#00008B"
                    android:textSize="50dp" />


            </LinearLayout>



            <com.marcinmoskala.arcseekbar.ArcSeekBar
                android:id="@+id/direcao"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:rotation="180"
                app:maxProgress="100"
                app:progress="50"
                app:progressBackgroundColor="@color/colorPrimary"
                app:progressBackgroundWidth="10dp"
                app:progressWidth="30dp"
                app:roundEdges="true" />

            <TextView
                android:id="@+id/leme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posição do Leme"
                android:textAlignment="center"
                android:textColor="	#00008B"
                android:textSize="50dp" />
        </TableLayout>



        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerVoltBE"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="16"
                    app:unit="Volt" />

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerTempBE"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="120"
                    app:unit="TEMP ºC" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerPressCxBE"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:unit="Cx.Psi" />

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerPressMBE"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:maxSpeed="5"
                    app:unit="Kg/cm³" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerConsmBE"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:unit="L/h" />

                <com.github.anastr.speedviewlib.AwesomeSpeedometer
                    android:id="@+id/SpeedometerPressA"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:unit="A.Psi" />
            </TableRow>


        </TableLayout>
    </LinearLayout>

</RelativeLayout>